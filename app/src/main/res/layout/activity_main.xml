<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbackground"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="417dp"
        android:layout_height="45dp"
        android:background="@color/darkturquoise"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="403dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="false"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"


            android:orientation="vertical"
            android:src="@drawable/earforyoulogocyan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:id="@+id/text_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/darkturquoise"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prev1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/like1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_like"
                    android:layout_marginStart="10dp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/like_count1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    />

                <ImageView
                    android:id="@+id/comment1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_comment"/>
                <TextView
                    android:id="@+id/comment_count1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise" />
                <TextView
                    android:id="@+id/date1"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textSize="12sp" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/text_container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/darkturquoise"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prev2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/like2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_like"
                    android:layout_marginStart="10dp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/like_count2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textStyle=""/>

                <ImageView
                    android:id="@+id/comment2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/comment_count2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise" />
                <TextView
                    android:id="@+id/date2"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textSize="12sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/text_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/darkturquoise"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prev3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/like3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_like"
                    android:layout_marginStart="10dp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/like_count3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textStyle=""/>

                <ImageView
                    android:id="@+id/comment3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/comment_count3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise" />
                <TextView
                    android:id="@+id/date3"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textSize="12sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/text_container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/darkturquoise"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prev4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/like4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_like"
                    android:layout_marginStart="10dp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/like_count4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textStyle=""/>

                <ImageView
                    android:id="@+id/comment4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/comment_count4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise" />
                <TextView
                    android:id="@+id/date4"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:textColor="@color/darkturquoise"
                    android:textSize="12sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:foregroundTint="#2B2B2B"
        android:progressTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>

